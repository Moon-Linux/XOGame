<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#222222"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/text_novbat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X novbati"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/abril"
        android:layout_marginBottom="50dp"
        android:textColor="#FFFFFF"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1_3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"

        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2_3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3_3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="80dp"
            android:textSize="25dp"
            android:fontFamily="@font/abril"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:fontFamily="@font/abril"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:fontFamily="@font/abril"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:textSize="25dp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="80dp"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/text_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp"
            android:textSize="25dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/text_teng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:textSize="25dp"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>